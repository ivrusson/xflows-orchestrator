{
  "name": "@xflows/plugin-react",
  "version": "1.0.0",
  "description": "React integration for XFlows framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
