{
  "name": "xflows",
  "version": "1.0.0",
  "description": "React prototype for XState flows with Vite",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format . --write",
    "check": "biome check . --write",
    "validate:flow": "node tools/validate-flow.js",
    "validate:examples": "find examples -name '*-flow.json' -o -name '*-example.json' | xargs -I {} node tools/validate-flow.js {}",
    "spectral:lint": "spectral lint examples/ -r .spectral.yaml",
    "sandbox": "pnpm --filter @xflows/sandbox dev",
    "demo": "pnpm --filter @xflows/react-demo dev",
    "build:packages": "pnpm -r --filter './packages/*' build",
    "install:all": "pnpm install",
    "docs:dev": "pnpm --filter @xflows/docs dev",
    "docs:serve": "pnpm --filter @xflows/docs serve",
    "docs:build": "pnpm --filter @xflows/docs build",
    "test": "pnpm -r --filter './packages/*' test",
    "test:integration": "./scripts/run-integration-tests.sh",
    "test:unit": "pnpm -r --filter './packages/*' test",
    "test:e2e": "pnpm --filter @xflows/core test e2e-integration"
  },
  "dependencies": {
    "@types/ejs": "^3.1.5",
    "@types/json-logic-js": "^2.0.8",
    "@xstate/react": "^4.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "ejs": "^3.1.10",
    "json-logic-js": "^2.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xstate": "^5.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@stoplight/spectral-cli": "^6.15.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0"
  },
  "packageManager": "pnpm@9.6.0"
}
